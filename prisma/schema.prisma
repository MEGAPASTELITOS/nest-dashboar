generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? 

  username String @unique
  email    String  @unique
  hash     String
  
  hashedRt String?
  @@map("users")
}

model Customers{
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? 

  name String 
  email String @unique
  image_url String

  invoices Invoices[]
}

model Invoices {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? 

  amount String
  status Status @default(PAID)
  date String

  customers   Customers @relation(fields: [customersId], references: [id])
  customersId Int
}

model Revenue {
  month String @unique
  revenue String
}

enum Status {
  PENDING 
  PAID 
}